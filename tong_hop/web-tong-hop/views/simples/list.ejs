<%- include('../partials/header.ejs') %>
<%- include('../partials/functions.ejs') %>
<pre><%= inspect() %></pre>
<div class="container-fluid">
    <div class="oth-form-container">
        <div class="oth-form-table">
            <div class="oth-form-table-header">
                <div class="btn btn-info float-right oth-simple-add" data-toggle="modal" data-target="#ActionModal">
                    Add Item
                </div>
            </div>
            <%- include('../partials/messages') -%>
            <div class="oth-form-table-main">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr class="table-active">
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">BirthDay</th>
                            <th scope="col">Image</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% simples.forEach(simple => { %>
                        <tr>
                        <th scope="row">1</th>
                            <td><%= simple.name %></td>
                            <td><%= simple.email %></td>
                            <td><%= simple.birth_day %></td>
                            <td><img src="images/<%= simple.image %>" alt=""></td>
                            <td><i class="fas fa-edit oth-simple-edit" data-id="1"></i></td>
                            <td><i class="fas fa-trash-alt oth-simple-delete"></i></td>
                        </tr>
                        <tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <%- include('../partials/pagination.ejs') %>
        </div>
    </div>
</div>
<%- include('../partials/simple/modal-add-edit.ejs') %>
<%- include('../partials/simple/modal-delete.ejs') %> 
<%- include('../partials/footer.ejs') %> 