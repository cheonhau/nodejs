<%- include('../partials/header.ejs') %>
<%- include('../partials/functions.ejs') %>
<%- include('../partials/loading.ejs') %>
<pre><%= inspect() %></pre>
<div class="container-fluid">
    <div class="oth-form-container">
        <div class="oth-form-table">
            <div class="oth-form-table-header">
                <div class="btn btn-danger float-right oth-simple-add" data-toggle="modal" data-target="#ActionModal">
                    Add Item
                </div>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <%- include('../partials/messages') -%>
            <div class="oth-form-table-main">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr class="table-active">
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">BirthDay</th>
                            <th scope="col">Image</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% simples.forEach( (simple, index) => { %>
                        <tr>
                        <th scope="row"><%= index + 1 %></th>
                            <td><%= simple.name %></td>
                            <td><%= simple.email %></td>
                            <td><%= formatDate(simple.birth_day); %></td>
                            <td><img src="images/<%= simple.image %>" alt=""></td>
                            <td><i class="fas fa-edit oth-simple-edit" data-id="<%= simple._id %>"></i></td>
                            <td><i class="fas fa-trash-alt oth-simple-delete" data-id="<%= simple._id %>"></i></td>
                        </tr>
                        <tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <%- include('../partials/pagination.ejs') %>
        </div>
    </div>
</div>
<%- include('../partials/simple/modal-add-edit.ejs') %>
<%- include('../partials/simple/modal-delete.ejs') %> 
<%- include('../partials/footer.ejs') %> 